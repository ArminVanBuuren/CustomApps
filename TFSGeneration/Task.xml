                      <Column PercentWidth="100">
                        <Control FieldName="Microsoft.VSTS.CMMI.Estimate" Type="FieldControl" Label="&amp;Estimate (hours):" LabelPosition="Left" NumberFormat="DecimalNumbers" MaxLength="10"/>
                      </Column>
                    </Group>
                    <Group>
                      <Column PercentWidth="55">
                        <Control FieldName="Microsoft.VSTS.Scheduling.RemainingWork" Type="FieldControl" Label="Remaining &amp;work (hours):" LabelPosition="Left" NumberFormat="DecimalNumbers" MaxLength="10"/>
