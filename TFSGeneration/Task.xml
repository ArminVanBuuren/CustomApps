                        <Control FieldName="Microsoft.VSTS.Scheduling.FinishDate" Type="DateTimeControl" Label="&amp;Finish Date:" LabelPosition="Left" Format="Custom" CustomFormat="dd.MM.yyyy H:mm"/>
