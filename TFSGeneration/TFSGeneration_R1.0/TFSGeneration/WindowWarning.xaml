<mainControl:UIWindow x:Class="TFSAssist.WindowWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFSAssist"
        mc:Ignorable="d"
        Icon="Images/WarningIcon.ico"
        Title="Attention!"
        
        
        xmlns:mainControl="clr-namespace:UIControls.MainControl;assembly=UIControls"
        ResizeMode="NoResize"
                  
        MaxWidth="525" 
        MaxHeight="300" 
        SizeToContent="WidthAndHeight"
                      
                      Style="{DynamicResource VSUIWindowStyle1}"
                      
                      >


    <Grid x:Name="ChildBlock" Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock Padding="10" x:Name="ErrorMessage" 
				   Foreground="White" 
				   TextWrapping="Wrap" 
				  
		           HorizontalAlignment="Center"
		           VerticalAlignment="Center"
				   TextAlignment="Center"
				   ></TextBlock>
		<Button Grid.Row="1" Margin="5" Height="25" Width="50" Content="OK" Click="Button_Click" />
	</Grid>
	
</mainControl:UIWindow>



