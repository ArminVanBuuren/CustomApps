<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>

    <behaviors>
      <serviceBehaviors>
        <behavior name="chatServiceBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
          <serviceThrottling maxConcurrentCalls="2147483647" maxConcurrentSessions="2147483647"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>

    <services>
      <service name="WCFChat.Client.MainWindowChatServer" behaviorConfiguration="chatServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8041/ClientServer/"/>
          </baseAddresses>
        </host>
        <endpoint address="" binding="wsDualHttpBinding" bindingConfiguration="httpBinding" bindingNamespace="http://localhost/services/chat"  contract="WCFChat.Service.IChat"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>

    <bindings>
      <wsDualHttpBinding>
        <binding name="httpBinding" closeTimeout="00:00:20" openTimeout="20:00:00"
          receiveTimeout="00:00:20" sendTimeout="00:00:20" maxBufferPoolSize="67108864"
          maxReceivedMessageSize="67108864">
          <readerQuotas maxStringContentLength="67108864" maxArrayLength="67108864"
            maxBytesPerRead="67108864" />
          <reliableSession inactivityTimeout="00:20:00" />
          <security mode="None" />
        </binding>
        <binding name="WSDualHttpBinding_IChat" />
        <binding name="WSDualHttpBinding_IMainContract">
          <reliableSession inactivityTimeout="00:20:00" />
          <security mode="None" />
        </binding>
        <binding name="WSDualHttpBinding_IChat1">
          <reliableSession inactivityTimeout="00:20:00" />
          <security mode="None" />
        </binding>
      </wsDualHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:62042/ChatService.svc" binding="wsDualHttpBinding"
        bindingConfiguration="WSDualHttpBinding_IChat" contract="CS.IChat"
        name="WSDualHttpBinding_IChat">
        <identity>
          <userPrincipalName value="vhovanskij@bss.nvg.ru" />
        </identity>
      </endpoint>
      <endpoint address="http://localhost:8040/Services/Main" binding="wsDualHttpBinding"
        bindingConfiguration="WSDualHttpBinding_IMainContract" contract="ServiceReference1.IMainContract"
        name="WSDualHttpBinding_IMainContract" />
      <endpoint address="http://localhost:8040/Services/Chat" binding="wsDualHttpBinding"
        bindingConfiguration="WSDualHttpBinding_IChat1" contract="ServiceReference2.IChat"
        name="WSDualHttpBinding_IChat1" />
    </client>
  </system.serviceModel>
</configuration>