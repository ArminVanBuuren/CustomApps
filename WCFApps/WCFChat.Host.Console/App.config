<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
      <services>
        <service name="WCFChat.Host.Console.ChatService" behaviorConfiguration="chatServiceBehavior">
          <host>
            <baseAddresses>
              <add baseAddress="http://localhost:8040/WPFHost/"/>
            </baseAddresses>
          </host>
          <endpoint address="WCFChat" binding="wsDualHttpBinding" bindingConfiguration="httpBinding" contract="WCFChat.Host.Console.IChat"/>
          <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>

        </service>
      </services>

      <behaviors>
        <serviceBehaviors>
          <behavior name="chatServiceBehavior">
            <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
            <serviceDebug includeExceptionDetailInFaults="false"/>
            <serviceThrottling maxConcurrentCalls="100" maxConcurrentSessions="100"/>
          </behavior>
        </serviceBehaviors>
      </behaviors>

      <bindings>
        <wsDualHttpBinding>
          <binding name="httpBinding"
                   maxReceivedMessageSize="67108864"
                   maxBufferPoolSize="67108864"
                   closeTimeout="00:00:1"
                   openTimeout="00:00:1"
                   receiveTimeout="00:2:00"
                   sendTimeout="00:00:10"
          >
            <security mode="None">

            </security>
            <readerQuotas maxArrayLength="67108864"
                          maxBytesPerRead="67108864"
                          maxStringContentLength="67108864" />
            <reliableSession  inactivityTimeout="00:20:00"/>
          </binding>
        </wsDualHttpBinding>
      </bindings>
    </system.serviceModel>
</configuration>