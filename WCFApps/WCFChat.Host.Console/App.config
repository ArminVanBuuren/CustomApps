<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>

    <behaviors>
      <serviceBehaviors>
        <behavior name="chatServiceBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
          <serviceThrottling maxConcurrentCalls="2147483647" maxConcurrentSessions="2147483647"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
    
    <services>
      <service name="WCFChat.Host.Console.MainServer" behaviorConfiguration="chatServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8040/WPFHost/"/>
          </baseAddresses>
        </host>
        <endpoint address="WCFChat" binding="wsDualHttpBinding" bindingConfiguration="httpBinding" contract="WCFChat.Host.Console.IMainContract"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>

      <service name="WCFChat.Host.Console.ClientServer" behaviorConfiguration="chatServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8041/WPFHost/"/>
          </baseAddresses>
        </host>
        <endpoint address="WCFChat" binding="wsDualHttpBinding" bindingConfiguration="httpBinding" contract="WCFChat.Host.Console.IChat"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>


    <bindings>
      <wsDualHttpBinding>
        <binding name="httpBinding"
                 maxReceivedMessageSize="67108864"
                 maxBufferPoolSize="67108864"
                 closeTimeout="00:00:20"
                 openTimeout="20:00:00"
                 receiveTimeout="00:00:20"
                 sendTimeout="00:00:20" >
          <security mode="None">
          </security>
          <readerQuotas maxArrayLength="67108864"
                        maxBytesPerRead="67108864"
                        maxStringContentLength="67108864" />
          <reliableSession  inactivityTimeout="00:20:00"/>
        </binding>
      </wsDualHttpBinding>
    </bindings>
    
  </system.serviceModel>
</configuration>