<?xml version="1.0" encoding="UTF-8"?>
<scenario name="GetOrSetBGID">
	<include>
		<scenario name="SubScenarios\GetBGID" />
	</include>
	<objectList>
		<object name="Commander" class="FORIS.ServiceProvisioning.MmlProcessing.SPF.Processors.RequestProcessor" assembly="FORIS.SPA.MmlProcessing.dll"/>
		<object name="ResponseAssembler" class="FORIS.ServiceProvisioning.MmlProcessing.SPF.ResponseAssembler" assembly="FORIS.SPA.MmlProcessing.dll"/>
		<object name="DummyResponder" class="FORIS.ServiceProvisioning.MmlProcessing.SPF.DummyResponder" assembly="FORIS.SPA.MmlProcessing.dll" />
		<object name="IfMultipleXmlConditionsResolver" class="FORIS.ScenarioProcessing.CommonUnits.IfMultipleXmlConditionsResolver" assembly="FORIS.SPA.SPF.dll"/>
		<object name="XmlNodesCopier" class="FORIS.ScenarioProcessing.CommonUnits.XmlNodesCopier" assembly="FORIS.SPA.SPF.dll"/>
		<object name="ScenarioProcessor" class="FORIS.ScenarioProcessing.Base.SPF.SubscenarioProcessingUnit" assembly="FORIS.SPA.SPF.dll" />
	</objectList>
	<automat>
		<node name="GetBGID" object="ScenarioProcessor">
			<resultlist>
				<result value="0" node="CheckExistingBG" />
				<result value="" node="ResponseAssembler" />
			</resultlist>
			<parameterslist>
				<param name="Scenario" value="SubScenarios\GetBGID" />
			</parameterslist>
		</node>
		<node name="CheckExistingBG" object="IfMultipleXmlConditionsResolver">
			<comment>Check path DST_CURRENT_DATA</comment>
			<resultlist>
				<result value="0" node="dummySUCCESS"/>
				<result value="1" node="IsNeedDeleteGroup"/>
			</resultlist>
			<parameterslist>
				<param name="ObjectNameInContext" value="xmlrequest"/>
				<param name="IfXmlPath:0" value="[DST_CURRENT_DATA]"/>
			</parameterslist>
		</node>
		<node name="IsNeedDeleteGroup" object="IfMultipleXmlConditionsResolver">
			<comment>Dont create BG, if need to delete</comment>
			<resultlist>
				<result value="0" node="dummySUCCESS"/>
				<result value="1" node="CreateNewBG"/>
			</resultlist>
			<parameterslist>
				<param name="ObjectNameInContext" value="xmlrequest"/>
				<param name="OrXmlPath:0" value="ExtendedRequestMessage/AdditionalData/WithdrawalList/FMCList//IsNeedDeleteGroup[text()='True']"/>
				<param name="OrXmlPath:1" value="ExtendedRequestMessage/AdditionalData/WithdrawalList/FMCList//IsNeedDeleteGroup[text()='1']"/>
			</parameterslist>
		</node>
		<node name="CreateNewBG" object="Commander">
			<comment>Create New BG with current name</comment>
			<resultlist>
				<result value="0" node="CopyNewBGToXmlRequest"/>
				<result value="" node="ResponseAssembler"/>
			</resultlist>
			<parameterslist>
				<param name="Session:MethodName" value="POST"/>
				<param name="Session:Method" value="POST"/>
				<param name="Session:Url" value="[BGS_URL]"/>
				<param name="Command" value="BG_Create"/>
				<param name="ErrorDecodingType" value="ByRegexp"/>
				<param name="OverwriteDetailedResult" value="false"/>
				<param name="AppendSubscribersData" value="false"/>
				<param name="DecodedXmlDocumentName" value="NEW_BG"/>
				<param name="ApplyingDecoderList:0" value="BGSCollection"/>
			</parameterslist>
		</node>
		<node name="CopyNewBGToXmlRequest" object="XmlNodesCopier">
			<comment>Copy results with new generated BGID to SPA.BPM Request</comment>
			<resultlist>
				<result value="0" node="CopyNewBGToRequest"/>
				<result value="" node="ResponseAssembler"/>
			</resultlist>
			<parameterslist>
				<param name="SrcXml" value="NEW_BG"/>
				<param name="DstMessage" value="xmlrequest"/>
				<param name="CopyContentType" value="InnerXml"/>
				<param name="SrcXmlPath:0" value="[SRC_BGS_LIST]/*[1]"/>
				<param name="DstXmlPath:0" value="[DST_CURRENT_DATA]"/>
			</parameterslist>
		</node>
		<node name="CopyNewBGToRequest" object="XmlNodesCopier">
			<comment>Copy results with new generated BGID to SPA.BPM Request</comment>
			<resultlist>
				<result value="0" node="CheckNewBG"/>
				<result value="" node="ResponseAssembler"/>
			</resultlist>
			<parameterslist>
				<param name="SrcXml" value="NEW_BG"/>
				<param name="DstMessage" value="request"/>
				<param name="CopyContentType" value="InnerXml"/>
				<param name="SrcXmlPath:0" value="[SRC_BGS_LIST]/*[1]"/>
				<param name="DstXmlPath:0" value="[DST_CURRENT_DATA]"/>
			</parameterslist>
		</node>
		<node name="CheckNewBG" object="IfMultipleXmlConditionsResolver">
			<comment>Check path with new BG Item</comment>
			<resultlist>
				<result value="0" node="dummySUCCESS"/>
				<result value="1" node="ResponseAssembler"/>
			</resultlist>
			<parameterslist>
				<param name="ObjectNameInContext" value="xmlrequest"/>
				<param name="IfXmlPath:0" value="[DST_CURRENT_DATA]"/>
			</parameterslist>
		</node>
		<node name="dummySUCCESS" object="DummyResponder">
			<resultlist>
				<result value="" node="ResponseAssembler"/>
			</resultlist>
			<parameterslist>
				<param name="OverallResult" value="SUCCESS"/>
				<param name="DetailedResult" value="SUCCESS"/>
				<param name="Delay" value="0"/>
			</parameterslist>
		</node>
		<node name="ResponseAssembler" object="ResponseAssembler">
			<resultlist>
				<result value="" node=""/>
			</resultlist>
		</node>
	</automat>
</scenario>
