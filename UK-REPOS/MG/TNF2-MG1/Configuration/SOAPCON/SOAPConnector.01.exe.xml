<?xml version="1.0" encoding="utf-8" ?> 
<Application>
	<Settings>
		<Item name="ModuleType" value="SOAPCON" />
		<Item name="ModuleName" value="SOAPCON_01" />
		<Item name="ListeningPort" value="5432"/>  <!-- remoting interface listens this port -->
		<Item name="ConnectionsLimit" value="600"/> <!-- quantity of simultaneous connections is limited -->
		<Item name="ConnectionTTL" value="800"/>    <!-- remote invocation's time-to-live -->  
		<Item name="URI" value="RBT"/>            <!-- URI of service. Must be unique within the host -->  
		<Item name="SessionCleanInterval" value="300" />
		<Item name="CRMCacheCleanInterval" value="1"/>
		<Item name="StoringInterval" value="20" />
		<Item name="StoringHWM" value="200" />
		<Item name="FetchLimit" value="200" /> 
		<Item name="HealthAlgo" value="Simple" />    <!-- Simple, Adaptive , Delta-->
		<Item name="HealthParam" value="300" />
	</Settings>
	<TemplateProcessors defaultConfig="C:\FORIS\Messaging Gateway\Configuration\SOAPCON\SOAPTemplateProcessor.01.xml">
		<Processor dll="DefaultTemplates.dll" class="SOAPTemplateProcessor" config="C:\FORIS\Messaging Gateway\Configuration\SOAPCON\SOAPTemplateProcessor.01.xml" />
	</TemplateProcessors>
	<Monitors>
		<HeartBeat periodSec="20" />
		<NoActivity defaultThresholdSec="30">
			<MonitoredInterval thresholdSec="20">
				<day from="1" to="5" />
				<hour from="2" to="6" />
			</MonitoredInterval>
			<MonitoredInterval thresholdSec="40">
				<day from="1" to="5" />
				<hour from="16" to="20" />
			</MonitoredInterval>
			<MonitoredInterval thresholdSec="5">
				<day from="3" to="4" />
				<hour from="16" to="17" />
			</MonitoredInterval>
		</NoActivity>
		<NoDBConnection  periodSec="30" />
		<NoDeviceConnection  periodSec="30" />
		<NoDiscSpace  periodSec="120">
			<warning threshold="20" />
			<minor threshold="30" />
			<major threshold="40" />
			<critical threshold="50" />
		</NoDiscSpace>
	</Monitors>
</Application>
