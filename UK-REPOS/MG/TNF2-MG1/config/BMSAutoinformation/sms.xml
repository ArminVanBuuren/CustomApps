<templateGroup name="BMSAutoInformation">

	<template procedureName="DeliveryRequestBMSAutoInformationBBPrecheck">
	  <condition>
		<test item="0" matches="1" />
	  </condition>
	  <deliveryTemplate>
		<set item="Content" value="#{//Content/text()}" />
		<set item="Sender" value="MTC" />
		<set item="Recipient" value="${customer}" />
		<set item="Encoding" value="unicodefffe" />
		<set item="ScheduleDeliveryTime" value="#{getTimeInRange('0','08:00','22:00')}" />  <!-- 000000HHMMSS000R -->
	  </deliveryTemplate>
	</template>

