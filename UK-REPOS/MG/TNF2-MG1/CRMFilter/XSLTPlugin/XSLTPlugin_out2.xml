<plugin name="XSLTPlugin">

	<transform condition="/Message/@type='groupinterrogationresult'" 
			validation="1=1"  
			successTemplate="XSLTPlugin\Scripts\serviceid_fix.xsl"  
			errorTemplate=""   />

	<transform condition="/Message/@type='internalresult'" 
			validation="1=1"  
			successTemplate="XSLTPlugin\Scripts\internalresult.xsl"  
			errorTemplate=""   />

	<transform condition="session('initiator')='smscon' and /Message/@type='verificationresult'" 
			validation="1=1" 
			successTemplate="XSLTPlugin\Scripts\RED\output.xsl" 
			errorTemplate="" />

	<transform condition="//Package/@template_id='email -2'"  
			validation="1=1" 
			successTemplate="XSLTPlugin\Scripts\justStore.xsl" 
			errorTemplate="XSLTPlugin\Scripts\reject.xsl" />

	<transform condition="//Package/@template_id='DirectSendEmail'"  
			validation="1=1" 
			successTemplate="XSLTPlugin\Scripts\justStore.xsl" 
			errorTemplate="XSLTPlugin\Scripts\reject.xsl" />

	<transform condition="//Package/@template_id='fax -2'"  
			validation="1=1" 
			successTemplate="XSLTPlugin\Scripts\justStore.xsl" 
			errorTemplate="XSLTPlugin\Scripts\reject.xsl" />

       <transform condition="/Message/@type='dummyrequest'"
                  validation="1=1" 
                  successTemplate="XSLTPlugin\Scripts\DummyRequest.xsl" 
                  errorTemplate=""/>


</plugin>