            <PredefinedScripts Login="Login" Command="Command" Idle="" Logoff="" />
            <ScriptsList>
              <Script Name="Login" Path="..\SPA.SA\RBTStream\Scripts\Login.xml" />
              <Script Name="Logoff" Path="..\SPA.SA\RBTStream\Scripts\logoff.xml" />
