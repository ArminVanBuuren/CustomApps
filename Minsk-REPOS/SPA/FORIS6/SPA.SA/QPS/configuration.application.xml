<Configuration>
  <Settings>
    <Add Key="Requests.MaxQueuedPerHost" Value="1000" />
    <Add Key="Requests.PollPeriod" Value="5" />
    <Add Key="Requests.PollIdlePeriod" Value="2" />
    <Add Key="ProfilerConfiguration" Value="Profiler.xml" />
    <Add Key="FORIS.RI" Value="BEB" />
  </Settings>
  <serviceInstances>
    <serviceInstance hardwareID="QP:2223">
      <dictionary>..\SPA.SA\QPS\dictionary.xml</dictionary>
      <scenarios>..\SPA.SA\QPS\Scenarios</scenarios>
      <repetitionTable>..\SPA.SA\QPS\Misc\RepetitionTable.xml</repetitionTable>
      <socketList poolSize="20" maxConnections="20" minConnections="1" averageTime="1000" deltaAverageTime="4000" maxCommandsPerPeriod="1000" periodDuration="20" autoconnect="1" reconfigurationTimeout="0">
        <socket type="FORIS.ServiceProvisioning.Communication.Script.ManagedScriptSocket, FORIS.SPA.Communication">
          <config workingmode="wmPermanentEmulation">
            <socket type="FORIS.ServiceProvisioning.Communication.HttpSocket, FORIS.SPA.Communication">
              <config>
                <ParametersList>
                  <!--Parameter Key="Host" Value="172.24.220.65"/-->
                  <Parameter Key="Host" Value="127.0.0.1" />
                  <Parameter Key="Port" Value="8080" />
                  <Parameter Key="Url" Value="ua/soap" />
                  <Parameter Key="MethodName" Value="POST" />
                  <Parameter Key="Method" Value="POST" />
                  <Parameter Key="UserName" Value="" />
                  <Parameter Key="UserPwd" Value="" />
                  <Parameter Key="ContentType" Value="application/soap+xml; charset=utf-8" />
                  <Parameter Key="ParameterName" Value="" />
                </ParametersList>
              </config>
            </socket>
            <Emulation Success="&lt;errorCode&gt;0&lt;/errorCode&gt;" Failure="&lt;errorCode&gt;2&lt;/errorCode&gt;" RandomizePrintout="false" OverwriteCommandPrintout="true" Lifetime="00:00:00.00" />
            <Timers IdleTimeout="6000" />
            <PredefinedScripts Login="Login" Command="Command" Idle="" Logoff="" />
            <ScriptsList>
              <Script Name="Login" Path="..\SPA.SA\QPS\Scripts\Login.xml" />
              <Script Name="Logoff" Path="..\SPA.SA\QPS\Scripts\logoff.xml" />
              <Script Name="Command" Path="..\SPA.SA\QPS\Scripts\Command.xml" />
              <Script Name="NoSleep" Path="..\SPA.SA\QPS\Scripts\nosleep.xml" />
            </ScriptsList>
          </config>
        </socket>
      </socketList>
    </serviceInstance>
  </serviceInstances>
</Configuration>