<Configuration>
  <Settings>
    <Add Key="ProfilerConfiguration" Value="Profiler.xml" />
    <Add Key="Requests.MaxQueuedPerHost" Value="500" />
    <Add Key="Requests.PollPeriod" Value="5" />
    <Add Key="Requests.PollIdlePeriod" Value="2" />
    <Add Key="FORIS.RI" Value="BEB" />
  </Settings>
  <serviceInstances>
    <serviceInstance hardwareID="MT:1825">
      <dictionary>..\SPA.SA\Bookmate\Dictionary.xml</dictionary>
      <scenarios>..\SPA.SA\Bookmate\Scenarios</scenarios>
      <repetitionTable>..\SPA.SA\Bookmate\Misc\RepetitionTable.xml</repetitionTable>
      <socketList poolSize="10" maxConnections="10" minConnections="1" averageTime="1000" deltaAverageTime="4000" maxCommandsPerPeriod="500" periodDuration="20" autoconnect="1" reconfigurationTimeout="0">
        <socket type="FORIS.ServiceProvisioning.Communication.Script.ManagedScriptSocket, FORIS.SPA.Communication">
          <config workingmode="wmPermanentEmulation">
            <socket type="FORIS.ServiceProvisioning.Communication.HttpSocket, FORIS.SPA.Communication">
              <config>
                <ParametersList>
                  <!--Parameter Key="Host" Value="10.128.213.41"/-->
                  <Parameter Key="Host" Value="127.0.0.1" />
                  <Parameter Key="Port" Value="80" />
                  <Parameter Key="Url" Value="bookmate/api" />
                  <Parameter Key="MethodName" Value="POST" />
                  <Parameter Key="Method" Value="POST" />
                  <Parameter Key="UserName" Value="" />
                  <Parameter Key="UserPwd" Value="" />
                  <Parameter Key="ContentType" Value="application/x-www-form-urlencoded" />
                  <Parameter Key="ParameterName" Value="" />
                </ParametersList>
              </config>
            </socket>
            <Emulation Success="&gt;0&lt;/code" Failure="500" RandomizePrintout="false" OverwriteCommandPrintout="true" Lifetime="00:00:00.00" />
            <Timers IdleTimeout="6000" />
            <PredefinedScripts Login="Login" Command="Command" Idle="" Logoff="" />
            <ScriptsList>
              <Script Name="Login" Path="..\SPA.SA\Bookmate\Scripts\Login.xml" />
              <Script Name="Logoff" Path="..\SPA.SA\Bookmate\Scripts\logoff.xml" />
              <Script Name="Command" Path="..\SPA.SA\Bookmate\Scripts\Command.xml" />
              <Script Name="NoSleep" Path="..\SPA.SA\Bookmate\Scripts\nosleep.xml" />
            </ScriptsList>
          </config>
        </socket>
      </socketList>
    </serviceInstance>
  </serviceInstances>
</Configuration>