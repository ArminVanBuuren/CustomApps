<Configuration>
  <Settings>
    <Add Key="ReportTimeout" Value="180" />
    <Add Key="Requests.MaxQueuedPerHost" Value="250" />
    <Add Key="Requests.PollPeriod" Value="5" />
    <Add Key="Requests.PollIdlePeriod" Value="2" />
    <Add Key="ProfilerConfiguration" Value="Profiler.xml" />
    <Add Key="FORIS.RI" Value="BEB" />
  </Settings>
  <serviceInstances>
    <serviceInstance hardwareID="TV:1824">
      <dictionary>..\SPA.SA\ITV\Dictionary.xml</dictionary>
      <scenarios>..\SPA.SA\ITV\Scenarios</scenarios>
      <repetitionTable>..\SPA.SA\ITV\Misc\RepetitionTable.xml</repetitionTable>
      <socketList poolSize="5" maxConnections="5" minConnections="1" averageTime="1000" deltaAverageTime="4000" maxCommandsPerPeriod="250" periodDuration="10" autoconnect="1" reconfigurationTimeout="0">
        <socket type="FORIS.ServiceProvisioning.Communication.Script.ManagedScriptSocket, FORIS.SPA.Communication">
          <config workingmode="wmPermanentEmulation">
            <socket type="FORIS.ServiceProvisioning.Communication.HttpSocket, FORIS.SPA.Communication">
              <config>
                <ParametersList>
                  <Parameter Key="Host" Value="127.0.0.1" />
                  <!--Parameter Key="Host" Value="10.128.213.41"/-->
                  <Parameter Key="Port" Value="80" />
                  <Parameter Key="Url" Value="itvby/mts_fix/" />
                  <Parameter Key="MethodName" Value="GET" />
                  <Parameter Key="Method" Value="GET" />
                  <Parameter Key="UserName" Value="" />
                  <Parameter Key="UserPwd" Value="" />
                  <Parameter Key="ContentType" Value="text/html,application/xhtml+xml,application/xml" />
                  <Parameter Key="ParameterName" Value="" />
                </ParametersList>
              </config>
            </socket>
            <Emulation Success="[STATUS] =&gt; 0" Failure="[STATUS] =&gt; -1" RandomizePrintout="false" OverwriteCommandPrintout="true" Lifetime="00:00:00.00" />
            <Timers IdleTimeout="6000" />
            <PredefinedScripts Login="Login" Command="Command" Idle="" Logoff="" />
            <ScriptsList>
              <Script Name="Login" Path="..\SPA.SA\ITV\Scripts\Login.xml" />
              <Script Name="Logoff" Path="..\SPA.SA\ITV\Scripts\logoff.xml" />
              <Script Name="Command" Path="..\SPA.SA\ITV\Scripts\Command.xml" />
              <Script Name="NoSleep" Path="..\SPA.SA\ITV\Scripts\nosleep.xml" />
            </ScriptsList>
          </config>
        </socket>
      </socketList>
    </serviceInstance>
  </serviceInstances>
</Configuration>