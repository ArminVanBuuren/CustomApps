						<PredefinedScripts Login="Login" Command="Command" Idle="" Logoff=""/>
						<ScriptsList> 
							<Script Name="Login" Path=".\ITV\Dictionaries\Scripts\Login.xml"/>
							<Script Name="Logoff" Path=".\ITV\Dictionaries\Scripts\logoff.xml"/>
							<Script Name="Command" Path=".\ITV\Dictionaries\Scripts\Command.xml"/>
							<Script Name="NoSleep" Path=".\ITV\Dictionaries\Scripts\nosleep.xml"/>
						</ScriptsList> 
					</config> 
				</socket> 
			</socketList>
			<context>
				<object name="dictionary" type="FORIS.ServiceProvisioning.Dictionary.ServiceActivatorDictionary, FORIS.SPA.Dictionary">
					<config path=".\ITV\Dictionaries" xml="Dictionary.xml"/>
				</object>
				<object name="repetitionTable" type="FORIS.ServiceProvisioning.MmlProcessing.SPF.RepetitionTable, FORIS.SPA.MmlProcessing">
					<fileTableSource path=".\ITV\Misc" xml="RepetitionTable.xml"/>
				</object>					
			</context>
		</serviceInstance>
	</serviceInstances>
</Configuration>
