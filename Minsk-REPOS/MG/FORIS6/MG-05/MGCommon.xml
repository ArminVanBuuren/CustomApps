<Application configClass="FORIS.MessagingGateway.Configuration.CommonConfiguration">
  <Connections>
    <Database forisDataKey="MG" interfacePackage="API" cmdTimeout="0" />
    <Connector name="EMAILCON_01" type="EMAILCON" host="localhost" port="6660" sessionHandler="false" serviceName="FORIS.MG.EMAILCON_01" config="Configuration\EMAILCON\EMAILCON_01.exe.xml" />
    <Connector name="IVRCON_01" type="IVRCON" host="localhost" port="4441" sessionHandler="false" serviceName="FORIS.MG.IVRCON_01" config="Configuration\IVRCON\IVRCON_01.exe.xml" />
    <Connector name="IVRCON_02" type="IVRCON" host="localhost" port="4442" sessionHandler="false" serviceName="FORIS.MG.IVRCON_02" config="Configuration\IVRCON\IVRCON_02.exe.xml" />
    <Connector name="SMSCON_01" type="SMSCON" host="localhost" port="4440" sessionHandler="false" serviceName="FORIS.MG.SMSCON_01" config="Configuration\SMSCON\SMSCON_01.exe.xml" />
    <Connector name="SMSCON_02" type="SMSCON" host="localhost" port="4444" sessionHandler="false" serviceName="FORIS.MG.SMSCON_02" config="Configuration\SMSCON\SMSCON_02.exe.xml" />
    <Connector name="SMSCON_03" type="SMSCON" host="localhost" port="4454" sessionHandler="false" serviceName="FORIS.MG.SMSCON_03" config="Configuration\SMSCON\SMSCON_03.exe.xml" />
    <Connector name="SOAPCON_01" type="SOAPCON" host="localhost" port="4443" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_01" config="Configuration\SOAPCON\SOAPCON_01.exe.xml" />
    <Handler name="CRMCON_01" type="CRMCON" host="localhost" port="7770" sessionHandler="false" serviceName="FORIS.MG.CRMCON_01" config="Configuration\CRMCON\CRMCON_01.exe.xml" />
    <Handler name="DBCON_01" type="DBCON" host="localhost" port="7772" sessionHandler="true" serviceName="FORIS.MG.DBCON_01" config="Configuration\DBCON\DBCON_01.exe.xml" />
    <Handler name="DBCON_02" type="DBCON" host="localhost" port="7773" sessionHandler="true" serviceName="FORIS.MG.DBCON_02" config="Configuration\DBCON\DBCON_02.exe.xml" />
    <Handler name="DBCON_03" type="DBCON" host="localhost" port="7774" sessionHandler="true" serviceName="FORIS.MG.DBCON_03" config="Configuration\DBCON\DBCON_03.exe.xml" />
    <Handler name="DBCON_04" type="DBCON" host="localhost" port="7775" sessionHandler="true" serviceName="FORIS.MG.DBCON_04" config="Configuration\DBCON\DBCON_04.exe.xml" />
    <Handler name="WCFHND_01" type="WCFHND" host="localhost" port="3300" sessionHandler="false" serviceName="FORIS.MG.WCFHND_01" config="Configuration\WCFHND\WCFHND_01.exe.xml" />
    <Monitor type="CRMCON" port="0" sessionHandler="false" />
    <Emulator type="CRMCON" port="0" sessionHandler="false" serviceName="FORIS.MessagingGateway.CRMConnector1" />
  </Connections>
  <Settings>
    <Item name="ContextScopeEnabled" value="false" />
    <Item name="CentralLoggingEnabled" value="false" />
  </Settings>
  <log4net>
    <appender name="BufferingDataFileAppender" type="log4net.Appender.BufferingForwardingAppender">
      <bufferSize value="20" />
      <appender-ref ref="DataFileAppender" />
    </appender>
    <appender name="DataFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\data\%property{TYPE}_%property{NAME}_data.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ProcessingContent" />
        <levelMax value="ProcessingContent" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <appender name="BufferingActivityFileAppender" type="log4net.Appender.BufferingForwardingAppender">
      <bufferSize value="100" />
      <appender-ref ref="ActivityFileAppender" />
    </appender>
    <appender name="ActivityFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\activity\%property{TYPE}_%property{NAME}_activity.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="FATAL" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\error\%property{TYPE}_%property{NAME}_error.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <logger name="MG">
      <level value="DEBUG" />
      <appender-ref ref="BufferingActivityFileAppender" />
      <appender-ref ref="BufferingDataFileAppender" />
      <appender-ref ref="ErrorFileAppender" />
    </logger>
  </log4net>
  <XPathExtentionFile>defaultXPATH.xml</XPathExtentionFile>
</Application>