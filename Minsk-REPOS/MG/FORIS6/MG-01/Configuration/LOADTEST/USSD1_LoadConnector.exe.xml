    <Processor dll="DefaultTemplates.dll" class="SMSTemplateProcessor" config="USSDTemplateProcessor_LoadTest.xml" />
  </TemplateProcessors>
  <BlackList propertyName="Sender" regExpBan="^88">
    <Ban>603221981</Ban>
    <Ban>555715</Ban>
  </BlackList>
  <Encodings>
    <!-- These values are set according to SMPP specification -->
    <!-- This line shoudl be set according to SMSC default encoding -->
    <Table name="ascii" encoding="0" />
    <!-- ASCII encoding -->
    <Table name="ascii" encoding="1" />
    <!-- 8-bit binary encoding -->
    <Table name="ascii" encoding="2" />
    <!-- Latin1 (iso-8859-1) encoding -->
    <Table name="iso-8859-1" encoding="3" />
    <!--- 8-bit binary encoding -->
    <Table name="ascii" encoding="4" special="7bit" />
    <!-- Japanese encoding -->
    <Table name="shift-jis" encoding="5" />
    <!-- Cyrillic (iso-8859-5) encoding -->
    <Table name="iso-8859-5" encoding="6" />
    <!-- Larin/Hebrew (iso-8859-8) encoding -->
    <Table name="iso-8859-8" encoding="7" />
    <!-- Unicode encoding 
							There could be 2 types of encoding according to byte order
                                                    - "utf-16" classical (little endian) unicode encoding
                                                    - "unicodeFFFE" big endian unicode encoding -->
    <Table name="unicodefffe" encoding="8" />
    <!-- Values bigger than 8 have different meaning (it is not encoding at all) -->
  </Encodings>
