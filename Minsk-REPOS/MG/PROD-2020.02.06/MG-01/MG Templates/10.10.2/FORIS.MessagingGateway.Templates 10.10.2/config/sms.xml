	<macros>
		<define name="_DELIVERY_REQUEST_SENDER"	value="1234" />
	</macros>


	<template procedureName="DeliveryRequest">
		<condition>
			<test item="0" matches="1" />
		</condition>
		<receiveTemplate>
			<Message />
		</receiveTemplate>
		<retry delay="5" attempts="1" />
		<deliveryTemplate>
			<set item="Content" value="#{//Content/text()}" />
			<set item="Sender" value="_DELIVERY_REQUEST_SENDER" />
			<set item="Recipient" value="${Customer}" />
			<set item="Encoding" value="unicodefffe" />
			<set item="ScheduleDeliveryTime" value="#{getTimeInRange('${time_zone}', '09:00','22:00')}" />  <!-- 000000HHMMSS000R -->
			<set item="ValidityPeriod" value="#{getTimeInRange('${time_zone}', '2.00:00','2.12:00')}" />  <!-- 000000HHMMSS000R -->
		</deliveryTemplate>
	 </template>



