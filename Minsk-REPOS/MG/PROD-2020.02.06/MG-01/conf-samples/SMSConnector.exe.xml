<?xml version="1.0" encoding="utf-8" ?>
<Application configClass="FORIS.MessagingGateway.SMSConnector.SMSConnectorConfiguration" type="SMSCON">

  <SMSCenters>
    <Connection host="localhost" port="9111" systemId="strom" pass="strom" systemType="" />
  </SMSCenters>

  <BlackList propertyName="Sender" regExpBan="^88">
    <Ban>603221981</Ban>
    <Ban>555715</Ban>
  </BlackList>

  <Settings>
    <Item name="ModuleType" value="SMSCON" />
    <Item name="ModuleName" value="SMSCON_01" />
    
    <Item name="CRMCacheCleanInterval" value="100" />
    <Item name="StoringInterval" value="20" />
    <Item name="StoringHWM" value="200" />
    <Item name="SMSCBindRetryDelay" value="5" />
    <Item name="EnquireLinkInterval" value="120" />
    <Item name="DefaultEncoding" value="ascii" />
    <Item name="RegisteredDelivery" value="true" />
    <Item name="SrcTon" value="0" />
    <Item name="SrcNpi" value="1" />
    <Item name="DstTon" value="1" />
    <Item name="DstNpi" value="1" />
    <Item name="SubmitEsmClass" value="0" />
    <Item name="SubmitUssdServiceOp" value="0" />
    <Item name="SplittingType" value="None" />    <!-- None, UDH-->
    <Item name="ContentField" value="ShortMessage" />
    <Item name="SplitBy" value="70" />
    <Item name="SplitAfter" value="120" />
    <Item name="Window" value="0" />
    <Item name="WindowExceededDelay" value="600" />
    <Item name="ResponseTimeout" value="500" />
    <Item name="SuccessResponseCodes" value="0,88" />
    <Item name="HealthAlgo" value="Simple" />    <!-- Simple, Adaptive , Delta-->
    <Item name="HealthParam" value="300" />
    <Item name="UtcOffset" value="04+" />
    <Item name="FetchLimit" value="200" />
    <Item name="ThreadMultiplifier" value="1" />
    <Item name="SendSpeedLimit" value="20" />
  </Settings>

  <TemplateProcessors>
    <Processor dll="DefaultTemplates.dll" class="SMSTemplateProcessor" config="SMSTemplateProcessor.xml" />    
  </TemplateProcessors>

  <Anumbertransformations />

  <Encodings>
    <Outgoing>
      <Table name="iso-8859-1" encoding="0" special="7bit" />
      <Table name="ascii" encoding="1" special="" />
      <Table name="ascii" encoding="2" special="" />
      <Table name="iso-8859-3" encoding="3" special="" />
      <Table name="ascii" encoding="4" special="" />
      <Table name="shift-jis" encoding="5" special="" />
      <Table name="iso-8859-5" encoding="6" special="" />
      <Table name="iso-8859-8" encoding="7" special="" />
      <Table name="unicodefffe" encoding="8" special="" />
    </Outgoing>
    <Incoming>
      <Table name="gsm 03.38" encoding="0" special="7bit" />
      <Table name="ascii" encoding="1" special="" />
      <Table name="ascii" encoding="2" special="" />
      <Table name="iso-8859-3" encoding="3" special="" />
      <Table name="ascii" encoding="4" special="" />
      <Table name="shift-jis" encoding="5" special="" />
      <Table name="iso-8859-5" encoding="6" special="" />
      <Table name="iso-8859-8" encoding="7" special="" />
      <Table name="unicodefffe" encoding="8" special="" />
    </Incoming>
  </Encodings>

  <Monitors>
    <HeartBeat periodSec="10" />
    <NoActivity defaultThresholdSec="10">
      <MonitoredInterval thresholdSec="20">
        <day from="1" to="5" />
        <hour from="2" to="6" />
      </MonitoredInterval>
      <MonitoredInterval thresholdSec="40">
        <day from="1" to="5" />
        <hour from="16" to="20" />
      </MonitoredInterval>
      <MonitoredInterval thresholdSec="5">
        <day from="3" to="4" />
        <hour from="16" to="17" />
      </MonitoredInterval>
    </NoActivity>
    <NoDBConnection  periodSec="5" />
    <NoDeviceConnection  periodSec="5" />
    <NoDiscSpace  periodSec="10">
      <warning threshold="20" />
      <minor threshold="30" />
      <major threshold="40" />
      <critical threshold="50" />
    </NoDiscSpace>
  </Monitors>
  
</Application>
