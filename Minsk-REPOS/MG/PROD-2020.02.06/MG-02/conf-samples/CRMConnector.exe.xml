<?xml version="1.0" encoding="utf-8"?>
<Application>
  
  <Queues>
		<!--All queues have to be a non-transactional !-->
    <InputQueue name=".\telcrm_output" />
    <OutputQueue name=".\crmfilter_input" timeToBeReceived="1000" timeToReachQueue="10" recoverable="false">
      <Override connector="IVRCON_02" timeToBeReceived="20" recoverable="true" />
      <Override connector="SMSCON_01" timeToBeReceived="20" />
    </OutputQueue>
  </Queues>
  
  <Settings>
    <Item name="ModuleName" value="CRMCON_01" />
    <Item name="ModuleType" value="CRMCON" />
    <Item name="CRMCacheCleanInterval" value="100" />
	  <Item name="StoringInterval" value="20" />
	  <Item name="StoringHWM" value="200" />
	  <Item name="ThreadMultiplifier" value="1" />
	  <Item name="HealthAlgo" value="Simple" />
	  <Item name="HealthParam" value="1" />
    <Item name="FetchLimit" value="150"/>
  </Settings>
    
  <TemplateToConnector>
    <Map template_id="sms -2" connector="SMSCON_01" template_name="DeliveryRequest"  />
    <Map template_id="DirectSendSMS" connector="SMSCON_01" template_name="DeliveryRequest" />
    <Map template_id="DirectSendUSSD" connector="USSDCON_01" template_name="DeliveryRequest" />
    <Map template_id="DirectSendEmail" connector="EMAILCON_01" template_name="DeliveryRequest"  />
    <Map template_id="fax -3" connector="FAXCON_01" template_name="DeliveryRequest" />
    <Map template_id="email -2" connector="EMAILCON_01" template_name="DeliveryRequest" />
    <Map template_id="InvokeRequest" connector="IVRCON_01" template_name="INER_proc" />
    <Map template_id="mms -2" connector="MMSCON_01" template_name="DeliveryRequest" />
  </TemplateToConnector>

  <Monitors>
    <HeartBeat periodSec="10" />
    <NoActivity defaultThresholdSec="10">
      <MonitoredInterval thresholdSec="20">
        <day from="1" to="5" />
        <hour from="2" to="6" />
      </MonitoredInterval>
      <MonitoredInterval thresholdSec="40">
        <day from="1" to="5" />
        <hour from="16" to="20" />
      </MonitoredInterval>
      <MonitoredInterval thresholdSec="5">
        <day from="3" to="4" />
        <hour from="16" to="17" />
      </MonitoredInterval>
    </NoActivity>
    <NoDBConnection  periodSec="5" />
    <NoDeviceConnection  periodSec="5" />
    <NoDiscSpace  periodSec="10">
      <warning threshold="20" />
      <minor threshold="30" />
      <major threshold="40" />
      <critical threshold="50" />
    </NoDiscSpace>
  </Monitors>
  
</Application>
