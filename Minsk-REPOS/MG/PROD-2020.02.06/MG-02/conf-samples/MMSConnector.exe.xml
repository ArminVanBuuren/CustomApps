<?xml version="1.0" encoding="utf-8" ?> 
<Application>
	
	<MM7Connections>
		<Receiver port="82" account="mg" password="mg"  />
		<Submitter url="http://localhost:81/mm7" account="mg" password="mg" timeout="5000" />
	</MM7Connections>
	
	<Settings>
		<Item name="ModuleType" value="MMSCON" />
		<Item name="ModuleName" value="MMSCON_01" />

    <Item name="CRMCacheCleanInterval" value="10" />
    <Item name="StoringInterval" value="20" />
    <Item name="StoringHWM" value="200" />
    <Item name="ThreadMultiplifier" value="1" />
    <Item name="FetchLimit" value="150"/>
  </Settings>
	
	<TemplateProcessors>
		<Processor dll="DefaultTemplates.dll" class="MMSTemplateProcessor" />
	</TemplateProcessors>

  <Monitors>
    <HeartBeat periodSec="10" />
