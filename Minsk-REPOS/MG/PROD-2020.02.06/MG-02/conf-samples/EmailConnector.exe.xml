<?xml version="1.0" encoding="utf-8" ?> 
<Application>
  
	<EmailConnections>
    <SMTP server ="172.16.8.10" port ="25" delay="5000">
      <Account from="mg1@mail.com" name="mg1" password="123" />
      <Account from="mg2@mail.com" name="mg2" password="456" />
      <Account from="mg3@mail.com" name="mg3" password="789" />
    </SMTP>
    <POP3 server="172.16.8.10" port="110" wait="5000">
		    <!-- now you can just remove the string below to switch off the POP3 connections -->
			<Account name="mg" password="strom4590" /> 
		</POP3>
	</EmailConnections>
  
	<Settings>
		<Item name="ModuleType" value="EMAILCON" />
		<Item name="ModuleName" value="EMAILCON_01" />

    <Item name="MessagesLimit" value="10" />
		<Item name="DefaultCharset" value="ascii" />
		<Item name="DefaultEncoding" value="ascii" />
		<Item name="FetchLimit" value="20" />
		<Item name="CRMCacheCleanInterval" value="100" />
		<Item name="SplitBy" value="4800" />
		<Item name="TemplDir" value="tempEmails" />
		<Item name="ArchivatorName" value="rar.exe"/>
		<Item name="ArchivatorLine" value="m -v{0}k -ep -m0 {1} {2}" />
    <Item name="SessionCleanInterval" value="5" />
    <Item name="StoringInterval" value="20" />
    <Item name="StoringHWM" value="10" />
    <Item name="HealthAlgo" value="None" />
    <Item name="ThreadMultiplifier" value="1" />
    <!--None, Simple, Adaptive, Delta -->
    <Item name="MailSendQueueSize" value="128" />
    <Item name="MailSendQueueDelaySec" value="60" />
    <Item name="NumberOfSplitters" value="2" />
    <Item name="NumberOfDownloaders" value="2" />
    <Item name="NumberOfSenders" value="1" />
  </Settings>

  <FTPConnections>
    <FTP server="localhost" port="21" account="anonymous" password="" />
  </FTPConnections>

  <TemplateProcessors>
		<Processor dll="DefaultTemplates.dll" class="EmailTemplateProcessor" />
	</TemplateProcessors>

  <Monitors>
    <HeartBeat periodSec="5" />
    <NoActivity defaultThresholdSec="30">
      <MonitoredInterval thresholdSec="120">
        <day from="1" to="5" />
        <hour from="2" to="6" />
      </MonitoredInterval>
    </NoActivity>
    <NoDBConnection  periodSec="5" />
    <NoDeviceConnection  periodSec="5" />
    <NoDiscSpace  periodSec="10">
      <warning threshold="20" />
      <minor threshold="30" />
      <major threshold="40" />
      <critical threshold="50" />
    </NoDiscSpace>
  </Monitors>
  
</Application>
