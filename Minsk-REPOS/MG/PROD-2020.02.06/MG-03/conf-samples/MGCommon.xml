<?xml version="1.0" encoding="utf-8" ?>
<Application>
  <Connections>
    <!-- an alternative way to connecto to database
    <Database type="OracleClient" scheme="mgw" interfacePackage="API" connectionString="Server=test_UMRS;User ID=mgw;Password=mgw;Min pool size=5" cmdTimeout="30" />
    -->
    <Database forisDataKey="MG" interfacePackage="API" />

    <Connector type="SOAPCON" host="localhost" port="7440" name="SOAPCON_01" serviceName="FORIS.MessagingGateway.SOAPConnector" config="SOAPConnector.exe.xml"/>
    <Connector type="IVRCON" host="localhost" port="4440" name="IVRCON_01" serviceName="FORIS.MessagingGateway.IVRConnector" config="IVRConnector.exe.xml" />
    <Connector type="SMSCON" host="localhost" port="5550" name="SMSCON_01" serviceName="FORIS.MessagingGateway.SMSConnector" config="SMSConnector.exe.xml" />
    <Connector type="EMAILCON" host="localhost" port="6660" name="EMAILCON_01" serviceName="FORIS.MessagingGateway.EmailConnector" config="EmailConnector.exe.xml" />
    <Connector type="FAXCON" host="localhost" port="8880" name="FAXCON_01" serviceName="FORIS.MessagingGateway.FaxConnector" config="FaxConnector.exe.xml" />
    <Connector type="MMSCON" host="localhost" port="5560" name="MMSCON_01" serviceName="FORIS.MessagingGateway.MMSConnector" config="MMSConnector.exe.xml" />
    <Handler type="CRMCON" host="localhost" port="7770" name="CRMCON_01" serviceName="FORIS.MessagingGateway.CRMConnector" config="CRMConnector.exe.xml" />
    <Handler type="DBCON" host="localhost" port="2200" name="DBCON_01" serviceName="FORIS.MessagingGateway.DBConnector" config="DBConnector.exe.xml" />
    <Monitor type="MONITOR" host="localhost" port="9900" name="MONITOR" serviceName="FORIS.MessagingGateway.Monitor" config="Monitor.exe.xml" />

  </Connections>

  <Logging>
    <PerformanceCounters send="false" receive="false" />
    <Activity file="activity.log" directory="log" enabled="true" severity="Debug" buffer="100"/>
    <Data file="data.log" directory="log" enabled="true" buffer="20" newLine="true"/>
    <Error file="error.log" directory="log" enabled="true" buffer="200" />
  </Logging>

  <XPathExtentionFile>defaultXPATH.xml</XPathExtentionFile>

</Application>
