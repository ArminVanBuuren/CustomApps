<templates connector="MMS">
  <template procedureName="IncomingMMS">
    <receiveTemplate>
      <Message type="incomingcontent" initiator="mmscon" id="${guid}">
        <Channel id="MMS" />
        <Item recipient="${Recipient}" sender="${Sender}"  timestamp="@{now}">
          ${no-escape:attachmentBlock}
        </Item>
      </Message>
    </receiveTemplate>
    <deliveryTemplate />
  </template>
  
  <template procedureName="DeliveryRequest" reportDelivery="true">
   <deliveryTemplate>
     <set item="BodyText" value="#{//Content[@disposition='body']}" />
     <set item="Sender" value="777999666" />
     <set item="Recipient" value="${customer}" />
     <set item="Subject" value="#{//Content[@disposition='body']/@subject}" />
  </deliveryTemplate>
  </template>
  
</templates>