<mainControl:UIWindow
    x:Class="UIControls.MainControl.Presenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mainControl="clr-namespace:UIControls.MainControl"
    Style="{DynamicResource VSUIWindowStyle}"
    Title="Vladimir Khovanskiy" 
    ResizeMode="NoResize"
    FontFamily="Segoe UI"
    FontSize="11"
    Background="#333"
    Foreground="#FF32EBFB"
    MinWidth="285"
    MinHeight="87"
    MaxWidth="285"
    MaxHeight="87"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../MainControl/UIWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <TextBlock  Padding="1 0 1 7" Foreground="#FFF7F7F7" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" >
        Hello! Thanks for choosing my application!
    </TextBlock>
</mainControl:UIWindow>

