<configuration>
  <communication>
    <clientsCommunicator commType="DatabaseQueue">
      <queue queue="BPM01_01" idleTimeout="1000" requestLimit="200" />
    </clientsCommunicator>
    <activatorsCommunicator>
      <database readPeriod="2000" readCount="5000" />
    </activatorsCommunicator>
  </communication>
  <bpm>
    <bpmmodules>
      <RequestMessagePreprocessor>
        <param name="poolSize" value="20" />
        <param name="loggingPeriod" value="0" />
        <param name="threadLoggingPeriod" value="0" />
        <param name="pollScheduledRecsPeriod" value="2" />
        <param name="getScheduledRecsFromDbCount" value="1000" />
        <param name="checkRequestDuplicates" value="false" />
        <param name="checkRequestDuplicatesPeriod" value="60" />
      </RequestMessagePreprocessor>
      <RequestMessageProcessor>
        <param name="poolSize" value="20" />
        <param name="loggingPeriod" value="0" />
      </RequestMessageProcessor>
      <RequestMessagePostprocessor>
        <param name="loggingPeriod" value="0" />
        <param name="asyncDelete" value="true" />
        <param name="pollPeriod" value="2" />
        <param name="pollIdlePeriod" value="2" />
        <param name="getParentRowsFromDbCount" value="1000" />
        <param name="invalidSourceAddressTTL" value="300" />
        <param name="poolSize" value="20" />
      </RequestMessagePostprocessor>
      <ActivatorProxy>
        <param name="confirmation_timeout" value="300" />
        <param name="response_timeout" value="300" />
        <param name="loggingPeriod" value="0" />
      </ActivatorProxy>
      <BPM>
        <param name="postprocTimeout" value="60" />
        <param name="loggingPeriod" value="0" />
        <param name="responseType" value="Default" />
      </BPM>
    </bpmmodules>
    <hostTypesTable hostTypesFP="FP">
      <hostType type="BSP" identity="IMSI" direct="BSProxy"/>
      <hostType type="CT4" identity="IMSI" direct="MST" />
      <hostType type="CT5" identity="IMSI" direct="UNIFUN" />
      <hostType type="EI" identity="IMSI" direct="EIR" />
      <hostType type="HL" identity="MSISDN" direct="01" />
      <hostType type="MA" identity="IMSI" direct="MCA" />
      <hostType type="MG" identity="IMSI" direct="MG" />
      <hostType type="RBT" identity="IMSI" direct="INTECH" />
      <hostType type="SM" identity="IMSI" direct="SMS" />
    </hostTypesTable>
    <RegisteredServicesProviders>
      <provider for="" type="FORIS.ServiceProvisioning.Messaging.Communication.TDRegisteredServicesProvider, FORIS.SPA.Messaging.Communication" option="MergeProviderData" />
    </RegisteredServicesProviders>
  </bpm>
</configuration>