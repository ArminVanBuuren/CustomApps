<Command Name="SC.Modify_CFD">
  <Description>Modify call forwarding (to MCA) on mobile subscriber busy</Description>
  <Author Name="Khovanskiy Vladimir" Date="2018-09-20+09:00" />
  <Request>
    <RequestTemplate>
      <![CDATA[MOD SS:MSISDN=##msisdn##,##CFD_SERVICE##;^M]]>
    </RequestTemplate>
    <Item Name="msisdn" Type="Wellknown" />
    <Item Name="CFD_SERVICE" Type="LocalParameter" />
  </Request>
  <ParametersList>
    <Parameter Name="CFD_SERVICE" IsChoice="true" AbsenceValue="CFD=0">
      <Source Path="//AddList/RFS_HLR_CFD" PostFormat="CFD=1,CFDNTC=1,CFDNTF=1" />
      <Source Path="//EndList/RFS_HLR_CFD" PostFormat="CFD=1,CFDNTC=1,CFDNTF=1" />
    </Parameter>
  </ParametersList>
</Command>