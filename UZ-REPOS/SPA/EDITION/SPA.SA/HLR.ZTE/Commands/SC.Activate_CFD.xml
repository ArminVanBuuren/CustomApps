<Command Name="SC.Activate_CFD">
  <Description>Activate call forwarding (to MCA) on mobile subscriber busy</Description>
  <Author Name="Khovanskiy Vladimir" Date="2018-09-20+09:00" />
  <Request>
    <RequestTemplate>
      <![CDATA[Reg FN:MSISDN=##msisdn##,SS=CFD,Bsg=0,Register=1,Active=1##ForwardedToNumber####CallForwardingTimer##;^M]]>
    </RequestTemplate>
    <Item Name="msisdn" Type="Wellknown" />
    <Item Name="ForwardedToNumber" Type="LocalParameter" />
    <Item Name="CallForwardingTimer" Type="LocalParameter" />
  </Request>
  <ParametersList>
    <Parameter Name="ForwardedToNumber" IsChoice="true" AbsenceValue="">
      <Source Path="//RFS_HLR_CFD//ForwardedToNumber/Value" PostFormat=",CFDNRcAddr={0}" />
    </Parameter>
    <Parameter Name="CallForwardingTimer" IsChoice="true" AbsenceValue="">
      <Source Path="//CallForwardingTimer/Value" PostFormat=",Time={0}" />
    </Parameter>
  </ParametersList>
</Command>