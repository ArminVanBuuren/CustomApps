<Configuration>
  <Settings>
    <Add Key="EventLog" Value="FORIS.SPA.WCFGateway" />
    <!--Add Key="UseServiceRegistry" Value="true" /-->
    
    <!-- If SourcesFile is enabled, than Source tag in incoming messages will be set to Source from SourcesFile -->
    <!--Add Key="SourcesFile" Value="Sources.xml" /-->

    <!-- If SourceAddressesFile is enabled, than SourceAddress tag in incoming messages will be set to SourceAddress from SourceAddressesFile -->
    <Add Key="SourceAddressesFile" Value="SourceAddresses.xml" />
  </Settings>
  <DatabaseObjects Remotable="false">
    <Add Name="FORIS.SPA.CBP" ConnectionDataType="connectionStringKey" ConnectionData="FORIS.SPA.CBP" />
    <Add Name="FORIS.SPA.ARCHIVE" ConnectionDataType="connectionStringKey" ConnectionData="FORIS.SPA.ARCHIVE" />
    <Add Name="FORIS.SPA.STATE" ConnectionDataType="connectionStringKey" ConnectionData="FORIS.SPA.STATE" />
    <Add Name="FORIS.SPA.ROBP" ConnectionDataType="connectionStringKey" ConnectionData="FORIS.SPA.ROBP" />
  </DatabaseObjects>
  <Profiler>
    <Configuration>
      <SysTrace TraceMask="11111111" />
      <TraceSchema path="C:\FORIS\SPA\Configuration\SPA.WCFGateway\Schema.Application.xml"/>
      <TraceSchema path="C:\FORIS\SPA\Configuration\SPA.WCFGateway\Schema.Tracers.xml" />
      <TraceSchema path="C:\FORIS\SPA\Configuration\SPA.WCFGateway\Schema.Errors.xml" />
      <TraceSchema path="C:\FORIS\SPA\Configuration\SPA.WCFGateway\Schema.WCF.xml" />
    </Configuration>
    <LoggingActivationList>
      <Activate Name="Permanent" Path="C:\FORISLOG\SPA\WCFGateway\WCFGateway.%DATE%_N%ID%" ChangeOn="00:30:00">
        <TraceSchema Name="FORIS.SPA.Application">
          <TraceSchemaItem Name="Application"/>
        </TraceSchema>
        <TraceSchema Name="FORIS.SPA.WCFGateway">
          <TraceSchemaItem Name="WCFGateway" />
        </TraceSchema>
        <TraceSchema Name="Tracers">
          <TraceSchemaItem Name="Tracers" />
        </TraceSchema>
        <TraceSchema Name="Errors">
          <TraceSchemaItem Name="Errors" />
        </TraceSchema>
      </Activate>
    </LoggingActivationList>
  </Profiler>
</Configuration>