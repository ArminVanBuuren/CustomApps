    <Handler name="WCFHND_02_01" type="WCFHND" host="localhost" port="11190" sessionHandler="false" serviceName="FORIS.MG.WCFHND_02_01" config="Configuration\WCFHND\WCFHND_02_01.exe.xml" />

    <Connector name="DBCON_02_01" type="DBCON" host="localhost" port="11141" sessionHandler="false" serviceName="FORIS.MG.DBCON_02_01" config="Configuration\DBCON\DBCON_02_01.exe.xml" />
    <Connector name="IVRCON_02_01" type="IVRCON" host="localhost" port="11130" sessionHandler="false" serviceName="FORIS.MG.IVRCON_02_01" config="Configuration\IVRCON\IVRCON_02_01.exe.xml" />
    <Connector name="IVRCON_02_02" type="IVRCON" host="localhost" port="11131" sessionHandler="false" serviceName="FORIS.MG.IVRCON_02_02" config="Configuration\IVRCON\IVRCON_02_02.exe.xml" />
    <Connector name="IVRCON_SCP_02_07" type="IVRCON" host="localhost" port="11136" sessionHandler="false" serviceName="FORIS.MG.IVRCON_SCP_02_07" config="Configuration\IVRCON\IVRCON_SCP_02_07.exe.xml" />
    <Connector name="IVRCON_SCP_02_08" type="IVRCON" host="localhost" port="11137" sessionHandler="false" serviceName="FORIS.MG.IVRCON_SCP_02_08" config="Configuration\IVRCON\IVRCON_SCP_02_08.exe.xml" />
    <Connector name="SMSCON_02_01" type="SMSCON" host="localhost" port="11310" sessionHandler="false" serviceName="FORIS.MG.SMSCON_02_01" config="Configuration\SMSCON\SMSCON_02_01.exe.xml" />
    <Connector name="SMSCON_02_ISSA" type="SMSCON" host="localhost" port="11311" sessionHandler="false" serviceName="FORIS.MG.SMSCON_02_ISSA" config="Configuration\SMSCON\SMSCON_02_ISSA.exe.xml" />
    <Connector name="SOAPCON_USSD_02_01" type="SOAPCON" host="localhost" port="11150" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_02_01" config="Configuration\SOAPCON\SOAPCON_USSD_02_01.exe.xml" />
    <Connector name="SOAPCON_USSD_02_02" type="SOAPCON" host="localhost" port="11120" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_02_02" config="Configuration\SOAPCON\SOAPCON_USSD_02_02.exe.xml" />
    <Connector name="SOAPCON_USSD_02_KP" type="SOAPCON" host="localhost" port="11123" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_02_KP" config="Configuration\SOAPCON\SOAPCON_USSD_02_KP.exe.xml" />
    <Connector name="SOAPCON_PAYNET" type="SOAPCON" host="localhost" port="11100" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_PAYNET" config="Configuration\SOAPCON\SOAPCON_PAYNET.exe.xml" />
    <Connector name="SOAPCON_CLICK" type="SOAPCON" host="localhost" port="11101" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_CLICK" config="Configuration\SOAPCON\SOAPCON_CLICK.exe.xml" />
    <Connector name="SOAPCON_RBT" type="SOAPCON" host="localhost" port="11105" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_RBT" config="Configuration\SOAPCON\SOAPCON_RBT.exe.xml" />
