<templates connector="Email">
  <template procedureName="DeliveryRequest" reportDelivery="true">
    <retry delay="1800" attempts="3" />
    <deliveryTemplate conditionEx="#{'#{//Content[@disposition='body']/@subject}'='6'}">
      <set item="BodyText" value="#{//Content[@disposition='body']}" />
      <set item="From" value="no-reply@ums.uz" />
      <set item="To" value="${customer}" />
      <set item="ContentType" value="#{//Content[@disposition='body']/@type}" />
      <set item="MailEncoding" value="8bit" />
      <set item="MailCharSet" value="#{//Content[@disposition='body']/@charset}" />
      <set item="Subject" value="Детализация расходов" />
      <set item="RegisteredDelivery" value="true" />
    </deliveryTemplate>
    <deliveryTemplate>
      <set item="BodyText" value="#{//Content[@disposition='body']}" />
      <set item="From" value="no-reply@ums.uz" />
      <set item="To" value="${customer}" />
      <set item="ContentType" value="#{//Content[@disposition='body']/@type}" />
      <set item="MailEncoding" value="8bit" />
      <set item="MailCharSet" value="#{//Content[@disposition='body']/@charset}" />
      <set item="Subject" value="#{//Content[@disposition='body']/@subject}" />
      <set item="RegisteredDelivery" value="true" />
    </deliveryTemplate>
  </template>
  <template procedureName="Email_Monitoring">
    <retry delay="1800" attempts="3" />
    <deliveryTemplate>
      <set item="BodyText" value="${no-escape:Content}" />
      <set item="ContentType" value="#{/Message/Package/Item/Content/@type}" />
      <set item="From" value="no-reply@ums.uz" />
      <set item="Subject" value="#{/Message/Package/Item/Content/@subject}" />
      <set item="To" value="${customer}" />
      <set item="MailEncoding" value="8bit" />
      <set item="MailCharSet" value="Windows-1251" />
    </deliveryTemplate>
  </template>
  <template procedureName="Email_Test">
    <retry delay="1800" attempts="3" />
    <deliveryTemplate>
      <set item="BodyText" value="#{/Message/Package/Item/Content/@text}" />
      <set item="ContentType" value="#{/Message/Package/Item/Content/@type}" />
      <set item="From" value="#{/Message/Package/Item/Content/@sender}" />
      <set item="Subject" value="#{/Message/Package/Item/Content/@subject}" />
      <set item="To" value="${customer}" />
      <set item="MailEncoding" value="8bit" />
      <set item="MailCharSet" value="Windows-1251" />
    </deliveryTemplate>
  </template>
  <template procedureName="SMS_To_Email">
    <retry delay="1800" attempts="3" />
    <deliveryTemplate>
      <set item="BodyText" value="#{/Message/Package/Item/Content/@text}" />
      <set item="ContentType" value="#{/Message/Package/Item/Content/@type}" />
      <set item="From" value="#{/Message/Package/Item/Content/@sender}" />
      <set item="Subject" value="#{/Message/Package/Item/Content/@subject}" />
      <set item="To" value="${customer}" />
      <set item="MailEncoding" value="8bit" />
      <set item="MailCharSet" value="Windows-1251" />
    </deliveryTemplate>
  </template>
</templates>