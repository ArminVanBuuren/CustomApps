<Application configClass="FORIS.MessagingGateway.Configuration.CommonConfiguration">
  <Connections>
    <Database forisDataKey="MG" interfacePackage="API" />
    <Handler name="CRMCON_01_01" type="CRMCON" host="localhost" port="11100" sessionHandler="false" serviceName="FORIS.MG.CRMCON_01_01" config="Configuration\CRMCON\CRMCON_01_01.exe.xml" />
    <Handler name="WCFHND_01_01" type="WCFHND" host="localhost" port="11190" sessionHandler="false" serviceName="FORIS.MG.WCFHND_01_01" config="Configuration\WCFHND\WCFHND_01_01.exe.xml" />
    
    <Connector name="DBCON_01_01" type="DBCON" host="localhost" port="11341" sessionHandler="false" serviceName="FORIS.MG.DBCON_01_01" config="Configuration\DBCON\DBCON_01_01.exe.xml" />
    <Connector name="EMAILCON_01_01" type="EMAILCON" host="localhost" port="11150" sessionHandler="false" serviceName="FORIS.MG.EMAILCON_01_01" config="Configuration\EMAILCON\EMAILCON_01_01.exe.xml" />
    <Connector name="SMSCON_01_01" type="SMSCON" host="localhost" port="11110" sessionHandler="false" serviceName="FORIS.MG.SMSCON_01_01" config="Configuration\SMSCON\SMSCON_01_01.exe.xml" />
    <Connector name="SMSCON_01_ISSA" type="SMSCON" host="localhost" port="11111" sessionHandler="false" serviceName="FORIS.MG.SMSCON_01_ISSA" config="Configuration\SMSCON\SMSCON_01_ISSA.exe.xml" />
    <Connector name="SMSCON_01_INFORM" type="SMSCON" host="localhost" port="11115" sessionHandler="false" serviceName="FORIS.MG.SMSCON_01_INFORM" config="Configuration\SMSCON\SMSCON_01_INFORM.exe.xml" />
    <Connector name="SMSCON_01_CONTENT" type="SMSCON" host="localhost" port="11116" sessionHandler="false" serviceName="FORIS.MG.SMSCON_01_CONTENT" config="Configuration\SMSCON\SMSCON_01_CONTENT.exe.xml" />
    <Connector name="SMSCON_01_EMAIL" type="SMSCON" host="localhost" port="11117" sessionHandler="false" serviceName="FORIS.MG.SMSCON_01_EMAIL" config="Configuration\SMSCON\SMSCON_01_EMAIL.exe.xml" />
    <Connector name="SOAPCON_USSD_01_01" type="SOAPCON" host="localhost" port="11120" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_01_01" config="Configuration\SOAPCON\SOAPCON_USSD_01_01.exe.xml" />
    <Connector name="SOAPCON_USSD_01_02" type="SOAPCON" host="localhost" port="11140" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_01_02" config="Configuration\SOAPCON\SOAPCON_USSD_01_02.exe.xml" />
    <Connector name="SOAPCON_SMS_01_01" type="SOAPCON" host="localhost" port="11130" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_SMS_01_01" config="Configuration\SOAPCON\SOAPCON_SMS_01_01.exe.xml" />
    <Connector name="SOAPCON_SPA_01_01" type="SOAPCON" host="localhost" port="11121" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_SPA_01_01" config="Configuration\SOAPCON\SOAPCON_SPA_01_01.exe.xml" />
    <Connector name="SOAPCON_SCG_01_01" type="SOAPCON" host="localhost" port="11122" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_SCG_01_01" config="Configuration\SOAPCON\SOAPCON_SCG_01_01.exe.xml" />
    <Connector name="USSDCON_01_01" type="SMSCON" host="localhost" port="11170" sessionHandler="false" serviceName="FORIS.MG.USSDCON_01_01" config="Configuration\USSDCON\USSDCON_01_01.exe.xml" />
    <Connector name="USSDCON_01_02" type="SMSCON" host="localhost" port="11171" sessionHandler="false" serviceName="FORIS.MG.USSDCON_01_02" config="Configuration\USSDCON\USSDCON_01_02.exe.xml" />
    <Connector name="USSDCON_01_PCRF" type="SMSCON" host="localhost" port="11172" sessionHandler="false" serviceName="FORIS.MG.USSDCON_01_PCRF" config="Configuration\USSDCON\USSDCON_01_PCRF.exe.xml" />
  </Connections>
  <log4net>
    <appender name="BufferingDataFileAppender" type="log4net.Appender.BufferingForwardingAppender">
      <bufferSize value="20" />
      <appender-ref ref="DataFileAppender" />
    </appender>
    <appender name="DataFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\data\%property{TYPE}_%property{NAME}_data.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ProcessingContent" />
        <levelMax value="ProcessingContent" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <appender name="BufferingActivityFileAppender" type="log4net.Appender.BufferingForwardingAppender">
      <bufferSize value="100" />
      <appender-ref ref="ActivityFileAppender" />
    </appender>
    <appender name="ActivityFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\activity\%property{TYPE}_%property{NAME}_activity.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\error\%property{TYPE}_%property{NAME}_error.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <logger name="MG">
      <level value="DEBUG" />
      <appender-ref ref="BufferingActivityFileAppender" />
      <appender-ref ref="BufferingDataFileAppender" />
      <appender-ref ref="ErrorFileAppender" />
    </logger>
  </log4net>
  <XPathExtentionFile>defaultXPATH.xml</XPathExtentionFile>
</Application>