<plugin name="XSLTPlugin_out">
  <transform condition="/Message/@type='deliveryrequest' and 
                       (/Message/Package/@template_id='AddToGroup_onClean' 
                     or /Message/Package/@template_id='sms -2'
                     or /Message/Package/@template_id='SMS-spam')" validation="1=1" successTemplate="XSLT\Scripts\ChangeDeliveryRequest.xsl" errorTemplate="" />
  <transform condition="/Message/@type='deliveryrequest' and /Message/Package/@template_id='DirectSendSMS' and 
                       (/Message/Package/Item/@sender=''       
                     or /Message/Package/Item/@sender='MTS' 
                     or /Message/Package/Item/@sender='MTSUZB' 
                     or /Message/Package/Item/@sender='UMS'
                     or /Message/Package/Item/@sender='UMSUZB')" validation="1=1" successTemplate="XSLT\Scripts\TransformDeliveryReq.xsl" errorTemplate="" />
  <transform condition="/Message/@type='deliveryrequest'  and /Message/Package/@template_id='DirectSendSMS' 
                    and /Message/Package/Item/@sender!='' 
                    and /Message/Package/Item/@customer!=''" validation="1=1" successTemplate="XSLT\Scripts\TransformDeliveryReqFromISSA.xsl" errorTemplate="" />
  <transform condition="/Message/@type='deliveryrequest' and /Message/Package/@template_id='SMSAutoInformation'" validation="1=1" successTemplate="XSLT\Scripts\ReplaceCodeFromContent.xsl" errorTemplate="" />
  <transform condition="/Message/@type='retrievecustomerdataresult' and /Message/Item/Attribute[@name='accumulator']/@value!=''" validation="1=1" successTemplate="XSLT\Scripts\GetCounters.xsl" errorTemplate="" />
</plugin>