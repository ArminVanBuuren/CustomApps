<Application configClass="FORIS.MessagingGateway.Configuration.CommonConfiguration">
  <Connections>
    <Database forisDataKey="MG" interfacePackage="API" />
    <Handler name="CRMCON_03_01" type="CRMCON" host="localhost" port="11103" sessionHandler="false" serviceName="FORIS.MG.CRMCON_03_01" config="Configuration\CRMCON\CRMCON_03_01.exe.xml" />
    <Handler name="WCFHND_03_01" type="WCFHND" host="localhost" port="11190" sessionHandler="false" serviceName="FORIS.MG.WCFHND_03_01" config="Configuration\WCFHND\WCFHND_03_01.exe.xml" />
    <Connector name="DBCON_03_01" type="DBCON" host="localhost" port="11141" sessionHandler="false" serviceName="FORIS.MG.DBCON_03_01" config="Configuration\DBCON\DBCON_03_01.exe.xml" />
    <Connector name="IVRCON_03_01" type="IVRCON" host="localhost" port="11130" sessionHandler="false" serviceName="FORIS.MG.IVRCON_03_01" config="Configuration\IVRCON\IVRCON_03_01.exe.xml" />
    <Connector name="IVRCON_03_02" type="IVRCON" host="localhost" port="11131" sessionHandler="false" serviceName="FORIS.MG.IVRCON_03_02" config="Configuration\IVRCON\IVRCON_03_02.exe.xml" />
    <Connector name="IVRCON_03_TEST" type="IVRCON" host="localhost" port="11132" sessionHandler="false" serviceName="FORIS.MG.IVRCON_03_TEST" config="Configuration\IVRCON\IVRCON_03_TEST.exe.xml" />
    <Connector name="SMSCON_03_01" type="SMSCON" host="localhost" port="11310" sessionHandler="false" serviceName="FORIS.MG.SMSCON_03_01" config="Configuration\SMSCON\SMSCON_03_01.exe.xml" />
    <Connector name="SMSCON_03_ISSA" type="SMSCON" host="localhost" port="11311" sessionHandler="false" serviceName="FORIS.MG.SMSCON_03_ISSA" config="Configuration\SMSCON\SMSCON_03_ISSA.exe.xml" />
    <Connector name="SOAPCON_USSD_03_01" type="SOAPCON" host="localhost" port="11150" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_03_01" config="Configuration\SOAPCON\SOAPCON_USSD_03_01.exe.xml" />
    <Connector name="SOAPCON_USSD_03_02" type="SOAPCON" host="localhost" port="11151" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_USSD_03_02" config="Configuration\SOAPCON\SOAPCON_USSD_03_02.exe.xml" />
    <Connector name="SOAPCON_03_WHIRL" type="SOAPCON" host="localhost" port="11152" sessionHandler="false" serviceName="FORIS.MG.SOAPCON_03_WHIRL" config="Configuration\SOAPCON\SOAPCON_03_WHIRL.exe.xml" />
  </Connections>
  <log4net>
    <appender name="BufferingDataFileAppender" type="log4net.Appender.BufferingForwardingAppender">
      <bufferSize value="20" />
      <appender-ref ref="DataFileAppender" />
    </appender>
    <appender name="DataFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\data\%property{TYPE}_%property{NAME}_data.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ProcessingContent" />
        <levelMax value="ProcessingContent" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <appender name="BufferingActivityFileAppender" type="log4net.Appender.BufferingForwardingAppender">
      <bufferSize value="100" />
      <appender-ref ref="ActivityFileAppender" />
    </appender>
    <appender name="ActivityFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\activity\%property{TYPE}_%property{NAME}_activity.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="C:\FORISLOG\MG\error\%property{TYPE}_%property{NAME}_error.log" />
      <staticLogFileName value="false" />
      <countDirection value="1" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="300MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} [%17level] %thread: %message%newline" />
      </layout>
    </appender>
    <logger name="MG">
      <level value="DEBUG" />
      <appender-ref ref="BufferingActivityFileAppender" />
      <appender-ref ref="BufferingDataFileAppender" />
      <appender-ref ref="ErrorFileAppender" />
    </logger>
  </log4net>
  <XPathExtentionFile>defaultXPATH.xml</XPathExtentionFile>
</Application>