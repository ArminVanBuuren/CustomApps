        <param name="TDC" type="out:string" value="" />
        <param name="I" type="out:string" value="" />
        <param name="DBRESULT" type="out:string" value="" />
      </Parameters>
      <SendTemplate>
        <Message type="verificationresult" hostname="dispatcher" id="@{newGuid}" session_id="${session_id}" request_id="${id}">
          <Item customer="${customer}" tdc="1" tariffplan="${IVR_CODE}" charge="${charging}" state="0" dbresult="${DBRESULT}">
            <Attribute name="password" value="" />
