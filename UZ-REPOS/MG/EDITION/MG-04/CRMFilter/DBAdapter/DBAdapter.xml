        <param name="I" type="out:string" value="" />
        <param name="DBRESULT" type="out:string" value="" />
      </Parameters>
      <SendTemplate>
        <Message type="setupserviceresult" hostname="dispatcher" id="@{newGuid}" session_id="${session_id}" request_id="${id}">
          <Item customer="${customer}" tdc="1" state="0" dbresult="${DBRESULT}">
            <Attribute name="index" value="-1" />
