      </SendTemplate>
    </Procedure>
    <Procedure cond="/Message/@type='retrievecustomerdata' and /Message/Item/@subject='checkpayments' and /Message/Item/Attribute[@name='index']/@value='0'" call="OPERATION_GATEWAY.CHECK_LAST_PAYMENTS" using="mg">
